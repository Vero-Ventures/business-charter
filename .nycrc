{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "statements": 90,
  "lines": 90,
  "branches": 90,
  "functions": 90,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "**/*.config.ts",
    "src/index.ts"
  ],
  "reporter": ["text", "html"],
  "report-dir": "coverage"
}
